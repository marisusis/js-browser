    <script>
    document.getElementById('submit').onclick = function() {
      var s = document.getElementById('addrbox').value;
      $.getJSON('http://whateverorigin.org/get?url=' + encodeURIComponent(s) + '&callback=?', function(data){
        var f = document.getElementById('browserf');
	      f.contentDocument.write(data.contents);
      });
    }
        </script>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="js/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap-tour.min.js"></script>
    <script>
    var tour = new Tour();
    tour.addSteps({
      steps: [
        {
          element: "#start",
          title: "Title of my step",
          content: "Content of my step"
        },
        {
          element: "#addrbox",
          title: "Title of my step",
          content: "Content of my step"
        }
      ]
    });
     
    tour.init();
    tour.start();
    </script>
